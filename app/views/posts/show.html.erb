<div class="blog_wrap single">
<div class="row">
  <div class="large-12 column">
    <div class="post clearfix">
    <div class="post_thumb">
        <% if @post.image? %>
          <%= image_tag(@post.image) %>
        <% else %>
          <%= image_tag("blog2.jpg") %>
        <% end %>
    </div>
      <div class="post_desc">
        
        <h4><%= @post.name %></h4>
        <ul class="post_info">
        
        <li><span><%= @post.created_at.strftime("%d")%> <%=  @post.created_at.strftime("%b")%>  <%=  @post.created_at.strftime("%Y")%></span></li>
        <li><%= @post.comments.size %> Comments</li>
        </ul>
        <p><%= @post.content %></p>
        <p class="comment"><%= link_to "Comments", "#", id: "comments-link" %></p>
        <div class="post_comment clearfix" id="comment-section">
            <div id="comment-listing">
                <%= render @post.comments %>                
            </div>
            <% if user_signed_in? %>
                <h2>New Comment</h2>
                <%= form_for [@post, Comment.new], remote: true do |f| %>              
                <p><%= f.text_area :content, :rows => 3 %></p>
                <p class="create_comm left"><%= f.submit "comment", :class=> "button"  %></p>
                <% end %>
            <% end %>
        </div>

<%= link_to 'Back', posts_path, :class => "button"  %>
</div>
</div>
</div>
</div>